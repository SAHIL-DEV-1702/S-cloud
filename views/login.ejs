<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CloudDriveS - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 via-indigo-200 to-purple-300"
  >
    <div
      class="bg-white/80 backdrop-blur-lg shadow-2xl rounded-2xl p-8 w-full max-w-md"
    >
      <h1 class="text-3xl font-bold text-center text-indigo-600 mb-6">
        Welcome
        <h2 class="text-xl font-bold text-indigo-600 mb-6">CloudDriveS</h2>
      </h1>

      <!-- Login Form -->
      <form action="/login" method="POST" class="space-y-5">
        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-2"
            >Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter your email"
            class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
            required
          />
        </div>

        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-2"
            >Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
            required
          />
        </div>

        <div class="flex items-center justify-between text-sm">
          <label class="flex items-center">
            <input
              type="checkbox"
              class="h-4 w-4 text-indigo-600 border-gray-300 rounded"
            />
            <span class="ml-2 text-gray-600">Remember me</span>
          </label>
          <a href="#" class="text-indigo-500 hover:underline"
            >Forgot password?</a
          >
        </div>

        <div class="pt-4">
          <input
            type="submit"
            value="Login"
            class="w-full bg-indigo-600 text-white font-semibold py-2 rounded-xl shadow-md hover:bg-indigo-700 transition transform hover:scale-[1.02]"
          />
        </div>
      </form>

      <!-- Register Link -->
      <p class="text-center text-sm text-gray-600 mt-6">
        Donâ€™t have an account?
        <a href="/" class="text-indigo-500 hover:underline font-medium">
          Register
        </a>
      </p>

      <% if (typeof error !== 'undefined') { %>
      <p class="text-red-600 text-center mt-4"><%= error %></p>
      <% } %>
    </div>
  </body>
</html>
